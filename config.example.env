# Audio Transcription App Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=3000
NODE_ENV=development

# AI Model Configuration (Placeholder)
# Update these paths when you have local models installed
WHISPER_MODEL_PATH=./models/whisper
LLAMA_MODEL_PATH=./models/llama
WHISPER_API_URL=http://localhost:8080
LLAMA_API_URL=http://localhost:8081

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
FEEDBACK_DIR=feedback

# Security Configuration
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-change-this

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
